{
	"src_folders": ["tests"],
	"output_folder": "reports",
	"live_output": true,
	"parallel_process_delay": 1500,
	"custom_commands_path": "customs/commands",
	"custom_assertions_path": "customs/assertions",

	"test_workers": {
		"enabled": true,
		"workers": "auto"
	},

	"selenium": {
		"start_process": true,
		"server_path": "bin/selenium-server-standalone-2.53.0.jar",
		"log_path": "logs",
		"cli_args": {
			"webdriver.chrome.driver": "bin/chromedriver",
			"webdriver.firefox.profile": "default"
		}
	},

	"test_settings": {
		"default": {
			"launch_url": "http://localhost:4000",
			"silent": true,
			"screenshots": {
				"enabled": false,
				"on_failure": true,
				"on_error": false,
				"path": "screenshots"
			},
			"javascriptEnabled": true,
			"acceptSslCerts": true,
			"desiredCapabilities": {
				"browserName": "chrome",
				"chromeOptions": {
					"args": [
						"use-fake-device-for-media-stream",
						"use-fake-ui-for-media-stream"
					]
				}
			},
			"globals": {
				"varKey": "value"
			}
		},

		"qa": {
			"launch_url": "http://praetemptatus.agilehealthinsurance.com",
			"globals": {
				"varKey": "anotherValue"
			}
		}
	}
}
